{
  "manifest_version": 3,
  "name": "FactFiendWordOverHaul",
  "version": "1.0",
  "description": "Fact Fiend/Untitled Side Channel asked for this. Replaces 'Woke' with 'challenging norms'",
  "permissions": [
    "storage",
    "declarativeContent"
  ],
  "icons": {
    "16": "icons/logo16.png",
    "64": "icons/logo64.png",
    "96": "icons/logo96.png",
    "128": "icons/logo128.png"
  },
  "action": {
    "default_icon": {
      "96":"icons/logo96.png"
    },
    "default_title": "FactFiend Word Overhaul",
    "default_popup": "popup/menu.html"
  },
  "options_page": "options/settings.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content_scripts/main.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}
